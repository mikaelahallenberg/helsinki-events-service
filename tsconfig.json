{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "./build",
    "skipLibCheck": true,
  },
  "exclude": ["node_modules"]
}
